        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5">


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBox" />

        <CheckBox
            android:id="@+id/checkBox2"
